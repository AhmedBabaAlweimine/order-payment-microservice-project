def services = ['service-registry','cloud-config-server','geteway-service','order-service', 'payment-service','hystrix-dashboard']

pipeline {
    agent any
    tools {
        maven 'maven'   // Must match the name you set in Global Tool Config
        jdk 'jdk11'      // Optional if using JDK 11
    }
    stages {
        stage('Checkout') {
            echo "Checkout repo..."
            steps {
                git branch: 'main', url: 'https://github.com/AhmedBabaAlweimine/order-payment-microservice-project.git',
                credentialsId: 'test'
            }
        }

        stage('Build Microservices') {
            steps {
                script {
                    services.each { svc ->
                        dir("${svc}") {
                            echo "clean install ${svc}..."
                            sh "mvn -B clean install -Dmaven.test.failure.ignore=true"
                        }
                    }
                }
            }
        }

        stage('Build docker images') {
            steps {
                script {
                    sh 'eval $(minikube docker-env)'
                    services.each { svc ->
                        dir("${svc}") {
                            echo "Building docker image for ${svc}..."
                            sh "docker build -t ${svc}:latest ."
                        }
                    }
                }
            }
        }
    }
}
